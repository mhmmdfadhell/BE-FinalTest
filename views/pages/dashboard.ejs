<!DOCTYPE html>
<html>
<head>
  <title>Data Siswa</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    
    h1 {
      text-align: center;
    }
    
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
    }
    
    th {
      background-color: #f2f2f2;
    }
    
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    
    .form-container {
      margin-top: 20px;
      border: 1px solid #ddd;
      padding: 20px;
      width: 400px;
    }
    
    .form-container label {
      display: block;
      margin-bottom: 10px;
    }
    
    .form-container input[type=text], .form-container input[type=date] {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }
    
    .form-container input[type=submit] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
    }
    form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="date"],
        select,
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #45a049;
        }
  </style>
</head>
<body>
  <h1>Data Siswa</h1>
  
  <table>
    <thead>
      <tr>
        <th>No</th>
        <th>Nama</th>
        <th>Umur</th>
        <th>Tanggal Lahir</th>
        <th>Kelas</th>
        <th>Alamat</th>
        <th>No. Telepon</th>
        <th>Nama Ortu</th>
        <th>No. Telepon Ortu</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% students.forEach((student, index)=> { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= student.fullname %></td>
            <td><%= student.age %></td>
            <td> <%= moment(student.born_date).format('DD/MM/YYYY') %></td>
            <td><%= student.grade %></td>
            <td><%= student.address %></td>
            <td><%= student.hp %></td>
            <td><%= student.parent_name %></td>
            <td><%= student.parent_hp %></td>
            <td >
               <a href="/edit-student/<%=student.id %>">EDIT</a>
          <a href="/delete-student/<%=student.id %>"
            onclick="return confirm('yakin mau diapus?')">HAPUS</a>
            </td>
          </tr>
          <% }) %>
    </tbody>
  </table>
  
  <h1>Tambah Siswa</h1>
  <form action="/add-student" method="POST" >
    <div>
        <label for="fullname">Fullname</label>
        <input type="text" name="fullname" id="fullname"
            placeholder="Name" required>
    </div>
    <div>
        <label for="born_date">BornDate</label>
        <input type="date" name="born_date" id="born_date"
            required>
    </div>
    <div>
        <label for="grade">Grade</label>
        <select name="grade" id="grade"required>
            <option value="Mathematics">
                Mathematics
            </option>
            <option value="Science">
                Science
            </option>
            <option value="Social">
                Social
            </option>
            <option value="Literature">
                Literature
            </option>
            <option value="Martial Art">
                Martial Art
            </option>
            <option value="Dance">
                Dance
            </option>
        </select>
    </div>
    <div>
        <label for="address">Address</label>
        <textarea name="address" id="address" required></textarea>
    </div>
    <div>
        <label for="hp">Handphone</label>
        <input type="number" name="hp" id="hp" placeholder="0895 1234 567"
            required>
    </div>
    <div>
        <label for="parent_name">Parent Name</label>
        <input type="text" name="parent_name" id="parent_name" placeholder="Parent Name"
            required>
    </div>
    <div>
        <label for="parent_hp">Parent Handphone</label>
        <input type="number" name="parent_hp" id="parent_hp" placeholder="0895 1234 5678"
            required>
    </div>
    <button type="submit">Add
        Student</button>
</form>
</div>
</body>
</html>                                
